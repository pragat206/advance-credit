# Production Environment Variables
# Copy this to .env and fill in your actual values

# Security
SECRET_KEY=your-super-secure-random-key-here-change-this
CRM_SESSION_SECRET=another-secure-random-key-for-crm-sessions

# Database URLs (Use PostgreSQL for production)
DATABASE_URL=postgresql://username:password@host:port/database_name
CRM_DATABASE_URL=postgresql://username:password@host:port/database_name

# Admin Credentials (Change these!)
ADMIN_EMAIL=admin@advancecredit.com
ADMIN_PASSWORD=secure-production-password-here

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Settings
DEBUG=False
ENVIRONMENT=production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# CRM Settings
CRM_BASE_URL=https://yourdomain.com/crm
CRM_DATABASE_URL=postgresql://username:password@host:port/database_name

# Cloudinary Configuration (for blog image storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret 